@model The_Book.Models.SATeacherViewModel
@using The_Book.Models
@using Microsoft.AspNet.Identity
@{
    string userId = User.Identity.GetUserId();
    string role = "";
    var init = "";
    ApplicationDbContext context = new ApplicationDbContext();
    var user = context.Users.Find(userId);
    init = user.firstName.Substring(0, 1).ToUpper();
    if (user.middleName != null)
    {
        init = user.firstName.Substring(0, 1).ToUpper() + user.middleName.Substring(0, 1).ToUpper();
    }
    role = "Teacher";
}
<!DOCTYPE html>
<html>
<body class="sidebar-mini fixed">
    <div class="wrapper">
        <aside class="main-sidebar hidden-print">
            <section class="sidebar">
                <div class="user-panel">
                    <div class="pull-left image"><img class="img-circle" src="@Url.Action("UserPhoto","Home")" alt="User Image"></div>
                    <div class="pull-left info">
                        <a href="~/Teachers/Details"><p> @init @user.lastName</p></a>
                        <p class="designation">@role</p>
                    </div>
                </div>
                <ul class="sidebar-menu">
                    <li><a href="~/Home/Index"><i class="fa fa-dashboard"></i><span>Dashboard</span></a></li>
                    <li class="treeview">
                        <a href="#"><i class="fa fa-laptop"></i><span>Data Management</span><i class="fa fa-angle-right"></i></a>
                        <ul class="treeview-menu">
                            <li><a href="~/Libraries/Create"><i class="fa fa-circle-o"></i>Add to Library</a></li>
                            <li><a href="~/CASS/Index"><i class="fa fa-circle-o"></i>CASS</a></li>
                        </ul>
                    </li>
                    <li class="treeview">
                        <a href="#"><i class="fa fa-user-plus"></i><span>Users Management</span><i class="fa fa-angle-right"></i></a>
                        <ul class="treeview-menu">
                            <li><a href="~/Students/Activate"><i class="fa fa-circle-o"></i>Students</a></li>
                        </ul>
                    </li>
                    <li><a href="~/Libraries/Index"><i class="fa fa-institution"></i><span>Library</span></a></li>
                    <li><a href="~/ClassTasks/Create"><i class="fa fa-file-text-o"></i><span>Post Task</span></a></li>
                    <li><a href="~/ClassTasks/Index"><i class="fa fa-tasks"></i><span>Tasks</span></a></li>
                    <li class="treeview">
                        <a href="#"><i class="fa fa-th-list"></i><span>Tables</span><i class="fa fa-angle-right"></i></a>
                        <ul class="treeview-menu">
                            <li><a href="~/Students/Index"><i class="fa fa-circle-o"></i> Students</a></li>
                        </ul>
                    </li>
                </ul>
            </section>
        </aside>
        <div class="content-wrapper">
            <div class="row user">
                <div class="col-md-12">
                    <div class="profile">
                        <div class="info">
                            <img class="user-img" src="@Url.Action("UserPhoto","Home")">
                        </div>
                        <div class="cover-image"></div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card p-0">
                        <ul class="nav nav-tabs nav-stacked user-tabs">
                            <li class="disabled"><a href="#">Timeline</a></li>
                            <li class="active"><a href="#">Profile</a></li>
                            <li class="disabled"><a href="#">Address</a></li>
                            <li class="disabled"><a href="#">Classes</a></li>
                            <li class="disabled"><a href="#">Subjects</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="tab-content">
                        <div class="tab-pane active" id="user-details">
                            <div class="card user-settings">
                                <h4 class="line-head">@user.fullName</h4>
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    
                                    <div class="row">
                                        <div class="col-md-8 mb-20">
                                            <label>Salutation</label>
                                            @Html.DropDownListFor(model => model.title, new[]{
                                            new SelectListItem(){Text="Mr.",Value="Mr."},
                                            new SelectListItem(){Text="Miss.",Value="Miss."},
                                            new SelectListItem(){Text="Mrs.",Value="Mrs."},
                                            new SelectListItem(){Text="Dr.", Value="Dr."},
                                            new SelectListItem(){Text="Prof.", Value="Prof."},
                                            }, "Select Title", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="row mb-20">
                                        <div class="col-md-4">
                                            <label>Employee No.</label>
                                            @Html.EditorFor(model => model.empNo, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.empNo, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-md-4">
                                            <label>ID No.</label>
                                            @Html.EditorFor(model => model.idNo, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.idNo, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="row mb-20">
                                        <div class="col-md-4">
                                            <label>Mobile No.</label>
                                            @Html.EditorFor(model => model.mobileNo, new { htmlAttributes = new { placeholder = "e.g 0713456789", @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.mobileNo, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-md-4">
                                            <label>Office No.</label>
                                            @Html.EditorFor(model => model.telNo, new { htmlAttributes = new { placeholder = "e.g 0113456789", @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.telNo, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="card-footer">
                                        <div class="row">
                                            <div class="col-md-8">
                                                <input type="submit" class="btn btn-primary icon-btn" value="Submit" />
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/jquery-2.1.4.min.js"></script>
</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}