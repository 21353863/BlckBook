@model The_Book.Models.Teacher
@using The_Book.Models
@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.EntityFramework;
@{
    var init = Model.ApplicationUser.firstName.Substring(0, 1).ToUpper();
    if (Model.ApplicationUser.middleName != null)
    {
        init = Model.ApplicationUser.firstName.Substring(0, 1).ToUpper() + Model.ApplicationUser.middleName.Substring(0, 1).ToUpper();
    }
    var role = "Teacher";
}
<!DOCTYPE html>
<html>
<body class="sidebar-mini fixed">
    <div class="wrapper">
        <aside class="main-sidebar hidden-print">
            <section class="sidebar">
                <div class="user-panel">
                    <div class="pull-left image"><img class="img-circle" src="@Url.Action("UserPhoto","Home")" alt="User Image"></div>
                    <div class="pull-left info">
                        <a href="~/Teachers/Details"><p> @init @Model.ApplicationUser.lastName</p></a>
                        <p class="designation">@role</p>
                    </div>
                </div>
                <ul class="sidebar-menu">
                    <li><a href="~/Home/Index"><i class="fa fa-dashboard"></i><span>Dashboard</span></a></li>
                    <li class="treeview">
                        <a href="#"><i class="fa fa-laptop"></i><span>Data Management</span><i class="fa fa-angle-right"></i></a>
                        <ul class="treeview-menu">
                            <li><a href="~/Libraries/Create"><i class="fa fa-circle-o"></i>Add to Library</a></li>
                            <li><a href="~/CASS/Index"><i class="fa fa-circle-o"></i>CASS</a></li>
                        </ul>
                    </li>
                    <li class="treeview">
                        <a href="#"><i class="fa fa-user-plus"></i><span>Users Management</span><i class="fa fa-angle-right"></i></a>
                        <ul class="treeview-menu">
                            <li><a href="~/Students/Activate"><i class="fa fa-circle-o"></i>Students</a></li>
                        </ul>
                    </li>
                    <li><a href="~/Libraries/Index"><i class="fa fa-institution"></i><span>Library</span></a></li>
                    <li><a href="~/ClassTasks/Create"><i class="fa fa-file-text-o"></i><span>Post Task</span></a></li>
                    <li><a href="~/ClassTasks/Index"><i class="fa fa-tasks"></i><span>Tasks</span></a></li>
                    <li class="treeview">
                        <a href="#"><i class="fa fa-th-list"></i><span>Tables</span><i class="fa fa-angle-right"></i></a>
                        <ul class="treeview-menu">
                            <li><a href="~/Students/Index"><i class="fa fa-circle-o"></i> Students</a></li>
                        </ul>
                    </li>
                </ul>
            </section>
        </aside>
        <div class="content-wrapper">
            <div class="row user">
                <div class="col-md-12">
                    <div class="profile">
                        <div class="info">
                            <img class="user-img" src="@Url.Action("UserPhoto","Home")">
                        </div>
                        <div class="cover-image"></div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card p-0">
                        <ul class="nav nav-tabs nav-stacked user-tabs">
                            <li><a href="~/ClassTasks/Timeline">Timeline</a></li>
                            <li class="active"><a href="~/Teachers/Details">Profile</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="tab-content">
                        <div class="tab-pane active">
                            <div class="card user-settings">
                                <div class="panel panel-primary">
                                    <div class="panel-heading" align="center">
                                        <h2><b>@Model.title @Model.ApplicationUser.fullName <i class="fa fa-info-circle"></i></b></h2>
                                    </div>
                                    <div class="panel-body" align="left">
                                        <div class="well">
                                            <dl class="dl-horizontal">
                                                <dt>
                                                    @Html.DisplayNameFor(model => model.empNo)
                                                </dt>

                                                <dd>
                                                    @Html.DisplayFor(model => model.empNo)
                                                </dd>

                                                <dt>
                                                    @Html.DisplayNameFor(model => model.idNo)
                                                </dt>

                                                <dd>
                                                    @Html.DisplayFor(model => model.idNo)
                                                </dd>

                                                <dt>
                                                    @Html.DisplayNameFor(model => model.dob)
                                                </dt>

                                                <dd>
                                                    @Model.dob.ToString("dd MMMM yyyy")
                                                </dd>

                                                <dt>
                                                    @Html.DisplayNameFor(model => model.gender)
                                                </dt>

                                                <dd>
                                                    @Html.DisplayFor(model => model.gender)
                                                </dd>

                                                <dt>
                                                    @Html.DisplayNameFor(model => model.mobileNo)
                                                </dt>

                                                <dd>
                                                    @Html.DisplayFor(model => model.mobileNo)
                                                </dd>

                                                <dt>
                                                    @Html.DisplayNameFor(model => model.telNo)
                                                </dt>

                                                <dd>
                                                    @Html.DisplayFor(model => model.telNo)
                                                </dd>

                                                <dt>
                                                    @Html.DisplayNameFor(model => model.ApplicationUser.Email)
                                                </dt>

                                                <dd>
                                                    @Html.DisplayFor(model => model.ApplicationUser.Email)
                                                </dd>
                                                <dt>
                                                    @Html.DisplayName("Home Address")
                                                </dt>

                                                <dd>
                                                    @Html.DisplayFor(model => model.teacherAddress.street)
                                                </dd>
                                                <dt>
                                                    @Html.DisplayName(" ")
                                                </dt>

                                                <dd>
                                                    @Html.DisplayFor(model => model.teacherAddress.suburb)
                                                </dd>
                                                <dt>
                                                    @Html.DisplayName(" ")
                                                </dt>

                                                <dd>
                                                    @Html.DisplayFor(model => model.teacherAddress.city)
                                                </dd>
                                                <dt>
                                                    @Html.DisplayName(" ")
                                                </dt>

                                                <dd>
                                                    @Html.DisplayFor(model => model.teacherAddress.code)
                                                </dd>
                                            </dl>
                                        </div>
                                    </div>
                                </div>
                                <div class="panel panel-primary">
                                    <div class="panel-heading" align="center">
                                        <h2><b>@Model.school.name <i class="fa fa-info-circle"></i></b></h2>
                                    </div>
                                    <div class="panel-body">
                                        <div class="well">
                                            <dl class="dl-horizontal">
                                                @if (Model.enrollments.Any())
                                                {
                                                    <dt>
                                                        @Html.DisplayName("Class(es)")
                                                    </dt>

                                                    foreach (var item in Model.enrollments)
                                                    {
                                                        var subj = (from x in item.EnrollmentSubjects
                                                                    where x.Teacher == Model
                                                                    select x).ToList()[0];
                                                        <dd>
                                                            Grade: @item.grade.ToString()@item.group Subject: @subj.name
                                                        </dd>
                                                    }
                                                }
                                                <dt>
                                                    @Html.DisplayNameFor(model => model.school.TelNo)
                                                </dt>

                                                <dd>
                                                    @Html.DisplayFor(model => model.school.TelNo)
                                                </dd>

                                                <dt>
                                                    @Html.DisplayNameFor(model => model.school.FaxNo)
                                                </dt>

                                                <dd>
                                                    @Html.DisplayFor(model => model.school.FaxNo)
                                                </dd>

                                                <dt>
                                                    @Html.DisplayNameFor(model => model.school.Email)
                                                </dt>

                                                <dd>
                                                    @Html.DisplayFor(model => model.school.Email)
                                                </dd>

                                                <dt>
                                                    @Html.DisplayName("School Address")
                                                </dt>

                                                <dd>
                                                    @Html.DisplayFor(model => model.school.schoolAddress.street)
                                                </dd>
                                                <dt>
                                                    @Html.DisplayName(" ")
                                                </dt>

                                                <dd>
                                                    @Html.DisplayFor(model => model.school.schoolAddress.suburb)
                                                </dd>
                                                <dt>
                                                    @Html.DisplayName(" ")
                                                </dt>

                                                <dd>
                                                    @Html.DisplayFor(model => model.school.schoolAddress.city)
                                                </dd>
                                                <dt>
                                                    @Html.DisplayName(" ")
                                                </dt>

                                                <dd>
                                                    @Html.DisplayFor(model => model.school.schoolAddress.code)
                                                </dd>
                                            </dl>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/jquery-2.1.4.min.js"></script>
</body>
</html>